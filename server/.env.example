# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# Use local for development; replace with Atlas in production
# Local: mongodb://localhost:27017/aimate
# Atlas (placeholder): mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/aimate
MONGO_URI=mongodb://localhost:27017/aimate

# JWT Configuration
# Change in production
JWT_SECRET=change-me-in-production
JWT_EXPIRE=7d

# OpenAI Configuration (optional)
# Obtain from https://platform.openai.com/
OPENAI_API_KEY=

# Gmail API Configuration (optional)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:5000/api/auth/gmail/callback
GMAIL_REFRESH_TOKEN=

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173